@{
    ViewData["Title"] = "Shop";
}

<head>
    <link rel="stylesheet" href="/css/Shop.css" />
</head>

<body>
<div class="row">
    <div class="col-8">
        <h1>Welcome Stranger! Anything you need?</h1>
    </div>
    <div class="col-2">
        <a class="btn btn-shine" asp-controller="Game" asp-action="Game">Leave</a>
    </div>
    <div class="col-2">
        <h1 id="wallet">€100</h1>
    </div>

    
</div>

@*----AttackItems----*@
<h2>Attack Items</h2>
<table class="table shopCategory">
    <thead>
    <tr>
        <th>Name</th>
        <th>Attack</th>
        <th>Price</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @*@foreach (var person in Model)
    {
        <partial name="ShopItemPartial" model=""/>
    }*@
    <partial name="ShopItemPartialAttackDefense"/>

    </tbody>
</table>

@*----DefenseItems----*@
<h2>Defense Items</h2>
<table class="table shopCategory">
    <thead>
    <tr>
        <th>Name</th>
        <th>Defense</th>
        <th>Price</th>
        <th></th>

    </tr>
    </thead>
    <tbody>
    @*@foreach (var person in Model)
    {
        <partial name="ShopItemPartial" model=""/>
    }*@
    <partial name="ShopItemPartialAttackDefense"/>

    </tbody>
</table>

@*----FuelItems----*@
<h2>Energy Items</h2>
<table class="table shopCategory">
    <thead>
    <tr>
        <th>Name</th>
        <th>Fuel</th>
        <th>Cooldown (sec)</th>
        <th>Price</th>
        <th></th>

    </tr>
    </thead>
    <tbody>
    @*@foreach (var person in Model)
    {
        <partial name="ShopItemPartial" model=""/>
    }*@
    <partial name="ShopItemPartialFuel"/>

    </tbody>
</table>



</body>