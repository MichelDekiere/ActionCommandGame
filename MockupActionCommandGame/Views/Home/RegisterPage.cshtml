@model ActionCommandGame.Api.Authentication.Model.UserRegistrationRequest
@{
    ViewData["Title"] = "LoginPage";
}
<head>
    <link rel="stylesheet" href="/css/LoginPage.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Creepster&display=swap" rel="stylesheet">
</head>

<div id="login">
    <div class="col-4">
        <h1>Register</h1>
        
        <div asp-validation-summary="ModelOnly"></div>

        <form method="post" asp-action="Register">

            <hr/>

            <partial name="LoginRegisterPartial" model="Model"/>
            
            <div class="form-group">
                <button type="submit" class="btn btn-shine" class="btn-shine" id="btnLoginPage">Register</button>
            </div>
        </form>
    </div>
</div>